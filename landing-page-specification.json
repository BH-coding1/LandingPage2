{
  "pageTitle": "Cobalt - Intuitive Finance Landing Page",
  "metadata": {
    "description": "Complete specification for recreating the Cobalt finance landing page. This JSON contains all layout, theme, and component information needed to build the page.",
    "framework": "Next.js with TypeScript",
    "uiLibrary": "shadcn/ui",
    "styling": "Tailwind CSS"
  },
  "theme": {
    "darkMode": true,
    "colors": {
      "primaryBackground": {
        "value": "#0D1117",
        "description": "Very dark blue-grey background"
      },
      "secondaryBackground": {
        "value": "#1A202C",
        "description": "Slightly lighter dark blue-grey for cards/panels"
      },
      "primaryText": {
        "value": "#FFFFFF",
        "description": "White text for headings and primary content"
      },
      "secondaryText": {
        "value": "#A0AEC0",
        "description": "Light grey for body text and secondary content"
      },
      "accentBlue": {
        "value": "#3B82F6",
        "description": "Medium blue/teal for highlights, links, and interactive elements (chart lines, button hovers)"
      },
      "buttonPrimaryBg": {
        "value": "#1E3A8A",
        "description": "Darker, muted blue for primary buttons"
      },
      "buttonPrimaryText": {
        "value": "#FFFFFF",
        "description": "White text on primary buttons"
      },
      "success": {
        "value": "#28a745",
        "description": "Green for positive indicators"
      },
      "warning": {
        "value": "#ffc107",
        "description": "Orange/Yellow for cautionary/negative indicators"
      },
      "border": {
        "value": "#4A5568",
        "description": "Subtle, light grey for component outlines"
      },
      "subtleGradient": {
        "description": "Very subtle radial gradient from dark blue to black in background areas"
      }
    },
    "typography": {
      "fontFamily": "Inter, sans-serif",
      "headings": {
        "h1": {
          "fontSize": "3.5rem",
          "fontWeight": "bold",
          "color": "primaryText",
          "lineHeight": "1.2"
        },
        "h2": {
          "fontSize": "2.5rem",
          "fontWeight": "bold",
          "color": "primaryText",
          "lineHeight": "1.3"
        },
        "h3": {
          "fontSize": "1.5rem",
          "fontWeight": "600",
          "color": "primaryText",
          "lineHeight": "1.4"
        }
      },
      "body": {
        "fontSize": "1rem",
        "fontWeight": "normal",
        "color": "secondaryText",
        "lineHeight": "1.6"
      },
      "link": {
        "color": "accentBlue",
        "textDecoration": "none",
        "hoverColor": "accentBlue",
        "hoverUnderline": false
      }
    },
    "spacing": {
      "containerPaddingX": "8rem",
      "sectionPaddingY": "6rem",
      "componentGapSmall": "1rem",
      "componentGapMedium": "2rem",
      "componentGapLarge": "4rem"
    },
    "borderRadius": "0.5rem",
    "shadows": {
      "description": "Minimal and very subtle, almost imperceptible, adhering to shadcn/ui defaults"
    },
    "aesthetic": "Minimalist, clean, high-contrast, professional, modern, data-driven"
  },
  "layout": {
    "type": "SinglePageScroll",
    "sections": [
      {
        "id": "header",
        "type": "Navbar",
        "position": "top",
        "sticky": true,
        "layout": {
          "display": "flex",
          "justifyContent": "space-between",
          "alignItems": "center",
          "padding": "1rem 8rem"
        },
        "components": [
          {
            "type": "Logo",
            "text": "@cobalt",
            "icon": {
              "type": "Abstract circular dot",
              "color": "accentBlue"
            },
            "shadcnComponent": "Custom/Text",
            "href": "/"
          },
          {
            "type": "Navigation",
            "items": [
              {
                "type": "NavLink",
                "text": "Blog",
                "href": "/blog",
                "shadcnComponent": "Link"
              },
              {
                "type": "Button",
                "variant": "default",
                "text": "Join the waitlist",
                "shadcnComponent": "Button",
                "style": {
                  "backgroundColor": "buttonPrimaryBg",
                  "color": "buttonPrimaryText",
                  "borderRadius": "borderRadius"
                }
              }
            ]
