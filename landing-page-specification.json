            "componentType": "CustomDashboardDisplay",
            "details": {
              "sections": [
                {
                  "name": "Sidebar",
                  "items": [
                    "Insights",
                    "Company",
                    "Transactions",
                    "Cards",
                    "Accounting",
                    "Settings",
                    "Partner rewards"
                  ],
                  "style": "Dark panel, text links with icons",
                  "shadcnComponent": "Sidebar"
                },
                {
                  "name": "MainContentHeader",
                  "layout": "flex",
                  "justifyContent": "space-between",
                  "alignItems": "center",
                  "elements": [
                    {
                      "type": "Input",
                      "variant": "search",
                      "placeholder": "Search anything...",
                      "shadcnComponent": "Input"
                    },
                    {
                      "type": "Button",
                      "variant": "icon",
                      "icon": "Configure",
                      "text": "Configure",
                      "shadcnComponent": "Button"
                    },
                    {
                      "type": "Avatar",
                      "src": "user-avatar-image",
                      "shadcnComponent": "Avatar"
                    }
                  ]
