                {
                  "name": "TimeSeriesChart",
                  "componentType": "CustomChart",
                  "details": {
                    "type": "LineChart",
                    "dataRepresenting": "Income vs Expenses",
                    "controls": [
                      {
                        "type": "Dropdown",
