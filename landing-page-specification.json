                  "elements": [
                    {
                      "type": "Text",
                      "content": "Hey! How can I help you?"
                    },
                    {
                      "type": "Input",
                      "placeholder": "Who's our most profitable customer?",
                      "shadcnComponent": "Input"
                    },
                    {
                      "type": "Button",
                      "text": "Ask Genius",
                      "shadcnComponent": "Button"
