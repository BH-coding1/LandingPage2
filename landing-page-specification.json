          {
            "type": "Paragraph",
            "text": "Say goodbye to the outdated financial tools. Every small business owner, regardless of the background, can now manage their business like a pro. Simple. Intuitive. And never boring.",
            "shadcnComponent": "p",
            "maxWidth": "600px"
          },
          {
            "type": "ButtonGroup",
            "layout": "flex",
            "gap": "1rem",
            "items": [
              {
                "type": "Button",
                "variant": "default",
                "text": "Join the waitlist",
                "shadcnComponent": "Button",
                "style": {
                  "backgroundColor": "buttonPrimaryBg",
                  "color": "buttonPrimaryText",
                  "borderRadius": "borderRadius"
                }
              },
              {
                "type": "Button",
                "variant": "ghost",
                "text": "Learn more",
                "icon": "ArrowDown",
                "shadcnComponent": "Button",
                "style": "Text link with icon"
              }
            ]
