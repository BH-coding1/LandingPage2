  "componentMapping": {
    "shadcnComponents": {
      "Button": "components/ui/button.tsx",
      "Card": "components/ui/card.tsx",
      "Input": "components/ui/input.tsx",
      "Avatar": "components/ui/avatar.tsx",
      "Link": "components/ui/link (or Next.js Link)",
      "Select": "components/ui/select.tsx",
      "Sidebar": "components/ui/sidebar.tsx"
    },
    "customComponents": {
      "Navbar": "components/Navbar.tsx",
      "Hero": "components/Hero.tsx",
      "FeatureSection": "components/FeatureSection.tsx",
      "DashboardDisplay": "components/DashboardDisplay.tsx",
      "Footer": "components/Footer.tsx"
    }
  },
  "implementationNotes": {
    "styling": "Use Tailwind CSS classes mapped from theme values",
    "components": "Extract all visual pieces into separate reusable components in /components/",
    "serverComponents": "Use server components by default, add 'use client' only when interactivity is needed",
    "chartLibrary": "Use Recharts for the dashboard chart component",
    "icons": "Use lucide-react for icons (ArrowDown, Configure, etc.)",
